<%- include ("header") %>
<main>
  <h2>Medlemsinfo</h2>
  <section class="member-info">
    <h3>Namn: <%= name %></h3>
    <p>E-post: <%= email %></p>
    <p>Telefonnummer <%= phone %></p>
    <p>Datum: <%= date %></p>
    <p>Övrig info/favoritdrink: <%= other %></p>

  </section>
<a class="btn" href="/member/delete/<%= _id %>">Radera medlem</a>
<section>
<h2>Uppdatera Information</h2>
    <form action="/member/update/<%= _id %>" method="post">
        <label for="name">Namn:</label>
        <input type="text" id="name" name="name" value="<%= name %>" required>
        
        <label for="email">E-post:</label>
        <input type="email" id="email" name="email" value="<%= email %>" required>
       
        <label for="phone">Telefonnummer:</label>
        <input type="number" id="phone" name="phone" value="<%= phone %>" required>
        
        <label for="date">Datum:</label>
        <input type="date" id="date" name="date" value="<%= date %>" required>
       
        <label for="other">Övrig info/favoritdrink:</label>
        <input type="text" id="other" name="other" value="<%= other %>">
        
        <button class="btn">Uppdatera Information</button>
      </form>
    </section>
    </main>


    <%- include ("footer") %>